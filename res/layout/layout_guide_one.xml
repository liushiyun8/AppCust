<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_100"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_welcom_logo"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_app_icon"
            android:layout_marginTop="@dimen/dimen_20">

            <com.eke.cust.widget.GradientVerticalTextView
                android:id="@+id/page_one_text"
                style="@style/start_text_style1"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:text="新版发布" />

            <com.eke.cust.widget.VerticalTextView
                android:id="@+id/page_one_text1"
                style="@style/start_text_style2"
                android:layout_marginTop="@dimen/dimen_2"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/page_one_text"
                android:text="足不出户" />


            <LinearLayout
                android:id="@+id/page_one_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2"
                android:layout_toRightOf="@+id/page_one_text1"
                android:visibility="invisible"
                android:orientation="vertical">

                <TextView
                    style="@style/start_text_style3"
                    android:ems="1"
                    android:text="找房子" />

                <TextView
                    style="@style/start_text_style3"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:ems="1"
                    android:text="约服务" />

                <TextView
                    style="@style/start_text_style3"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:ems="1"
                    android:text="享生活" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/page_one_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:visibility="invisible"
        android:layout_marginTop="@dimen/dimen_100"
        android:src="@drawable/welcome1_bg" />

</RelativeLayout>