<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dip" >

    <ImageView
        android:id="@+id/iv_house"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:background="#f2f2f2"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/house_source" />

    <ImageView
        android:id="@+id/iv_genfang"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:scaleType="fitXY"
        android:src="@drawable/genfang" />

    <TextView
        android:id="@+id/tv_housing_estate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_house"
        android:layout_alignRight="@id/iv_house"
        android:layout_below="@id/iv_house"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="星河盛世"
        android:textColor="#333333"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/iv_house"
        android:singleLine="true"
        android:text="3000元/月"
        android:textColor="#333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_house_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_price"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/iv_house"
        android:singleLine="true"
        android:text="3室2厅 99平米 南"
        android:textColor="@color/custom_grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_house_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_house_desc"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/iv_house"
        android:singleLine="true"
        android:text="随时入住"
        android:textColor="@color/custom_grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:singleLine="true"
        android:text="12345678"
        android:textColor="@color/custom_grey"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_number"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@id/tv_number"
        android:src="@drawable/icon_collect"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_is_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@id/tv_number"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_star"
            android:gravity="center"
            android:singleLine="true"
            android:text="实勘"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_number"
        android:layout_marginTop="12dip"
        android:singleLine="true"
        android:text="高层/22层"
        android:textColor="@color/custom_grey"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/ll_maidian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_house_update_time"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/iv_house"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_maidian_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:layout_marginTop="4dip"
            android:background="@drawable/maidian1"
            android:gravity="center"
            android:singleLine="true"
            android:text="精装修"
            android:textColor="@color/custom_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_maidian_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:background="@drawable/maidian2"
            android:gravity="center"
            android:singleLine="true"
            android:text="地铁房"
            android:textColor="@color/custom_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_maidian_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:background="@drawable/maidian3"
            android:gravity="center"
            android:singleLine="true"
            android:text="生活便利"
            android:textColor="@color/custom_grey"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_maidian_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_number"
            android:layout_marginLeft="4dip"
            android:layout_marginTop="4dip"
            android:background="@drawable/maidian2"
            android:gravity="center"
            android:singleLine="true"
            android:text="生活便利"
            android:textColor="@color/custom_grey"
            android:textSize="10sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_xianshigenjin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_housing_estate"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_genjin_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="3dip"
            android:background="#aeaeae" />

        <TextView
            android:id="@+id/tv_xianshigenjin_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_genjin_line"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="#FF0000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_xianshigenjin_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_genjin_line"
            android:layout_marginLeft="4dip"
            android:layout_toRightOf="@id/tv_xianshigenjin_number"
            android:gravity="right"
            android:singleLine="true"
            android:text="提示：限时跟进"
            android:textColor="#FF0000"
            android:textSize="10sp" />
        <TextView
            android:id="@+id/tv_xianshigenjin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_genjin_line"
            android:layout_marginLeft="4dip"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="#FF0000"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>