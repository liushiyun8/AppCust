<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a3a3a3"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="20dip" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6b6b6b"
        android:gravity="center"
        android:paddingBottom="2dip"
        android:paddingTop="2dip"
        android:text="业主收款账号"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:background="#ffffff"
        android:text="请选择"
        android:textSize="13sp"
        android:textColor="#000000"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:paddingRight="6dip"
        android:paddingLeft="6dip"
        android:drawableRight="@drawable/decrement_down"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="100dip"
        android:background="#9C9C9C"
        android:orientation="vertical"
        android:paddingBottom="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="20dip" >

        <EditText
            android:id="@+id/et_shoukuanzhanghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="收款账号"
            android:padding="5dip"
            android:text=""
            android:textColor="@color/custom_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_shoukuanren_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="收款人姓名"
            android:padding="5dip"
            android:text=""
            android:textColor="@color/custom_grey"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_yezhu_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="#ffffff"
            android:gravity="center"
            android:hint="业主登记手机号"
            android:padding="5dip"
            android:maxLength="11"
            android:text=""
            android:textColor="@color/custom_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/bg_mine_deal_yezhushoukuan_zhanghao_btn"
        android:paddingTop="7dip"
        android:paddingBottom="7dip"
        android:text="提交"
        android:textColor="#333333"
        android:textSize="16sp" />

</LinearLayout>