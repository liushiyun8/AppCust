<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fdffcb"
    android:orientation="vertical"
    android:padding="10dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/bg_house_search_btn"
            android:orientation="horizontal"
            android:paddingBottom="2dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="2dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="本栋\n单元数"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_danyuanshu_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/decrement_down" />

            <EditText
                android:id="@+id/et_danyuanshu_count"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/bg_sipandengji_rect_border"
                android:gravity="center"
                android:singleLine="true"
                android:editable="false"
                android:text="6"
                android:textColor="@color/custom_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_danyuanshu_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/increment_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/et_zonghushu"
            android:layout_weight="1"
            android:background="@drawable/bg_house_search_btn"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="楼层数"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_loucengshu_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/decrement_down" />

            <EditText
                android:id="@+id/et_loucengshu_count"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/bg_sipandengji_rect_border"
                android:gravity="center"
                android:singleLine="true"
                android:editable="false"
                android:text="8"
                android:textColor="@color/custom_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_loucengshu_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/increment_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/bg_house_search_btn"
            android:orientation="horizontal"
            android:paddingBottom="6dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="6dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="层户数"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_cenghushu_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/decrement_down" />

            <EditText
                android:id="@+id/et_cenghushu_count"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:background="@drawable/bg_sipandengji_rect_border"
                android:gravity="center"
                android:singleLine="true"
                android:editable="false"
                android:text="2"
                android:textColor="@color/custom_grey"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/iv_cenghushu_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:src="@drawable/increment_up" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_house_search_btn"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingLeft="10dip"
        android:paddingTop="4dip" >

        <RadioGroup
            android:id="@+id/rg_dongming"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/rb_shuzi_dongming"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/custom_rb"
                android:checked="true"
                android:text="数字\n栋名"
                android:textColor="@color/custom_grey"
                android:textSize="12sp"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/rb_wenzi_dongming"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dip"
                android:button="@drawable/custom_rb"
                android:text="文字\n栋名"
                android:textColor="@color/custom_grey"
                android:textSize="12sp"
                android:visibility="visible" />
        </RadioGroup>
        
        <EditText
                android:id="@+id/et_wenzi_dongming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:background="@drawable/bg_sipandengji_rect_border"
                android:gravity="center"
                android:singleLine="true"
                android:editable="true"
                android:hint="如：映月阁"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="12sp"
                android:visibility="invisible" />
        
    </LinearLayout>

</LinearLayout>