<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.eke.tabmore.camera_activity.CameraPreview
        android:id="@+id/sv_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/camera_back"
            android:visibility="visible" />

        <!--
             <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/camera_menu"
            android:visibility="visible" />
        -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_wireless_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:background="@color/white"
                android:gravity="center"
                android:text="wifi/4G"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_locat_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                 android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="Locat"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="20dip"
                android:src="@drawable/camera_light_auto"
                android:visibility="visible" />
        </LinearLayout>

        <!--
             <ImageView
            android:id="@+id/iv_oriention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginRight="10dip"
            android:layout_marginTop="110dip"
            android:src="@drawable/camera_p2l"
            android:visibility="visible" />
        -->

        <ImageView
            android:id="@+id/btn_capture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dip"
            android:background="@drawable/bg_camera_btn"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="10dip"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_final"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>