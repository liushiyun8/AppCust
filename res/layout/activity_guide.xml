<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/page_bottom_bg" />

    <com.eke.cust.widget.DirectionalViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.eke.cust.widget.CircleIndicator
        android:id="@+id/CircleIndicator"
        android:layout_width="48dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        app:ci_drawable="@drawable/shape_yellow_round"
        app:ci_drawable_unselected="@drawable/shape_whie_round_bg"
        app:ci_margin="10dp"
        app:ci_orientation="vertical"></com.eke.cust.widget.CircleIndicator>


    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="60dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/txt_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_start"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:visibility="invisible" />
        <Button
            android:id="@+id/bt_start"
            style="@style/start_bt_style"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dimen_10"
            android:visibility="invisible"
            android:text="@string/app_name" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/page_one_leftcloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_clound" />

</RelativeLayout>