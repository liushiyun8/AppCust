<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_100"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/welcom5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_welcome_house" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20">

            <com.eke.cust.widget.GradientVerticalTextView
                android:id="@+id/fragment5_text1"
                style="@style/start_text_style1"
                android:text="佣金省到家" />

            <com.eke.cust.widget.VerticalTextView
                android:id="@+id/fragment5_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="掌上看房神器"
                android:textSize="20sp" />

            <com.eke.cust.widget.VerticalTextView
                android:id="@+id/fragment5_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="掌上看房 线下实勘 轻松从容" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_welcom5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/dimen_100"
        android:layout_alignParentRight="true"
        android:src="@drawable/welcome5_bg" />

</RelativeLayout>