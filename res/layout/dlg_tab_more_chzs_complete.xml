<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="15dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="20dip" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6b6b6b"
        android:gravity="center"
        android:paddingBottom="2dip"
        android:paddingTop="2dip"
        android:text="请完善楼盘信息"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_sipandengji_rect_border"
            android:gravity="center"
            android:paddingBottom="3dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="3dip"
            android:text=""
            android:textColor="@color/custom_grey"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_distinct_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dip"
            android:background="@drawable/chzs_arrow_left" />

        <TextView
            android:id="@+id/tv_shi_distinct"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dip"
            android:background="@drawable/bg_chzs_distinct"
            android:gravity="center"
            android:paddingBottom="3dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:paddingTop="3dip"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_distinct_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dip"
            android:background="@drawable/chzs_arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_house_search_btn"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip" >

        <EditText
            android:id="@+id/et_loupan_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_sipandengji_rect_border"
            android:gravity="center"
            android:hint="请输入楼盘名称"
            android:text=""
            android:textColor="@color/custom_grey"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_zonghushu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="楼盘\n总户数"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_zonghushu"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/tv_zonghushu"
                android:background="@drawable/bg_sipandengji_rect_border"
                android:gravity="center"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dip"
                android:layout_toRightOf="@id/et_zonghushu"
                android:background="@drawable/bg_house_search_btn"
                android:orientation="horizontal"
                android:paddingBottom="2dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="2dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="总栋数"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_zongdongshu_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/decrement_down" />

                <EditText
                    android:id="@+id/et_zongdongshu_count"
                    android:layout_width="30dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:background="@drawable/bg_sipandengji_rect_border"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/custom_grey"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/iv_zongdongshu_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:src="@drawable/increment_up" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_fanghaomingming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:gravity="center"
                android:text="房号命名"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fanghaomingming_select"
                android:layout_width="match_parent"
                android:layout_height="22dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dip"
                android:paddingLeft="6dip"
                android:singleLine="true"
                android:layout_toRightOf="@id/tv_fanghaomingming"
                android:textColor="@color/custom_grey"
                android:textSize="10sp"
                android:drawableRight="@drawable/ic_unfold_more_black_18dp"
                android:background="@drawable/bg_nameway_border" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_house_search_btn"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="10dip" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager_gonggong"
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:layout_gravity="center"
            android:background="#00000000"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_dong_set_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:src="@drawable/chzs_arrow_left" />

            <TextView
                android:id="@+id/tv_current_dong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="1/8栋"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_dong_set_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:src="@drawable/chzs_arrow_right" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/bg_house_search_btn"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="提    交"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>