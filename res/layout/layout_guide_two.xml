<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_welcom2_dw"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/dimen_100">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_whie_round_bg"
                android:gravity="center"></View>

            <LinearLayout
                android:layout_width="@dimen/dimen_40"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:id="@+id/welcom2_dw"
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:scaleType="centerCrop"
                    android:src="@drawable/welcom2_dw" />
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout_welcom2_dw"
            android:layout_below="@+id/layout_welcom2_dw"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center_horizontal">

            <com.eke.cust.widget.GradientVerticalTextView
                android:id="@+id/pagetwo_text1"
                style="@style/start_text_style1"
                android:text="多维度找房"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

                <View
                    android:layout_width="20dp"
                    android:layout_height="120dp"
                    android:background="@color/white"
                    android:gravity="center"></View>

                <ImageView
                    android:id="@+id/iv_pagetwo_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/page_two_text1"
                    android:visibility="invisible" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_welcom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/dimen_100"
        android:src="@drawable/welcome2_bg"
        android:visibility="invisible" />
</RelativeLayout>