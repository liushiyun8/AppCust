<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_bg"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black1" />

    <TextView
        android:id="@+id/txt_wechatmoments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_wechatmoments"
        android:drawablePadding="10dp"
        android:layout_margin="@dimen/dimen_10"
        android:drawableRight="@drawable/icon_share_next"
        android:gravity="center_vertical"
        android:text="分享到微信朋友圈" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black1" />

    <TextView
        android:id="@+id/txt_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_wechat"
        android:drawablePadding="10dp"
        android:layout_margin="@dimen/dimen_10"
        android:drawableRight="@drawable/icon_share_next"
        android:gravity="center_vertical"
        android:text="分享到微信好友" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black1" />

    <TextView
        android:id="@+id/txt_shortmessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_shortmessage"
        android:drawablePadding="10dp"
        android:layout_margin="@dimen/dimen_10"
        android:drawableRight="@drawable/icon_share_next"
        android:gravity="center_vertical"
        android:text="通过短信分享" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black1" />

</LinearLayout>