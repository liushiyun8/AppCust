<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/welcom4_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/welcom4_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcom4_title"
        android:layout_marginLeft="20dp">

        <com.eke.cust.widget.GradientVerticalTextView
            android:id="@+id/fragment4_text1"
            style="@style/start_text_style1"
            android:layout_marginTop="@dimen/dimen_3"
            android:text="在线咨询" />

        <com.eke.cust.widget.VerticalTextView
            android:id="@+id/fragment4_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="想你所想 答你所问"
            android:layout_marginTop="@dimen/dimen_3"
            android:textSize="20sp" />

        <com.eke.cust.widget.VerticalTextView
            android:id="@+id/fragment4_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="随时恭候调戏" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_welcom4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/dimen_100"
        android:layout_alignParentRight="true"
        android:src="@drawable/welcome4_bg" />
</RelativeLayout>