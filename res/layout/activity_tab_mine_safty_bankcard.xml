<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_header_height"
        android:background="@color/header_title" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:onClick="back"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/header_title"
            android:text="密码设置"
            android:textColor="@color/header"
            android:textSize="@dimen/tab_header_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:layout_marginTop="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip" >

            <EditText
                android:id="@+id/et_your_orig_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:gravity="center"
                android:background="@drawable/bg_set_bankcard"
                android:hint="请输原密码"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/custom_grey1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip" >

            <EditText
                android:id="@+id/et_your_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:gravity="center"
                android:background="@drawable/bg_set_bankcard"
                android:hint="6-12位数字或字母"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/custom_grey1" />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dip"
            android:paddingLeft="50dip"
            android:paddingRight="50dip"
            android:paddingTop="10dip" >

            <EditText
                android:id="@+id/et_your_number_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:gravity="center"
                android:background="@drawable/bg_set_bankcard"
                android:hint="请再输一遍"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/custom_grey1" />
        
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dip"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:background="@drawable/bg_set_bankcard_send"/>

</RelativeLayout>