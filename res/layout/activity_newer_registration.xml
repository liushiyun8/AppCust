<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdffcb" >

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_header_height"
        android:background="@color/header_title" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:onClick="back"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/header_title"
            android:text="新助理注册"
            android:textColor="@color/header"
            android:textSize="@dimen/tab_header_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:layout_below="@id/rl_header"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="25dip"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_newer_reg_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_logo" >

        <RelativeLayout
            android:id="@+id/rl_step1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/ll_suozaichengshi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginTop="30dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="3dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="3dip"
                    android:text="所在城市"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_shuoshuchengshi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/bg_newer_reg_item"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="4dip"
                    android:paddingTop="4dip"
                    android:text="请选择"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_suozaiquxian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_suozaichengshi"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="3dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="3dip"
                    android:text="注册手机"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_shuozaiquxian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/bg_newer_reg_item"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="4dip"
                    android:paddingTop="4dip"
                    android:text="请选择"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_daililoupan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_suozaiquxian"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingBottom="3dip"
                    android:paddingLeft="2dip"
                    android:paddingRight="2dip"
                    android:paddingTop="3dip"
                    android:text="代理楼盘"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_daililoupan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dip"
                    android:background="@drawable/bg_newer_reg_item"
                    android:drawableRight="@drawable/decrement_down"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="4dip"
                    android:paddingTop="4dip"
                    android:text="0/0"
                    android:textColor="@color/custom_grey"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_next_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/bg_newer_registration_btn_disabled"
                android:paddingBottom="8dip"
                android:paddingTop="8dip"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_step2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <EditText
                android:id="@+id/et_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/bg_new_reg_name"
                android:gravity="center"
                android:hint="用户名"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />
            
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_real_name"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:background="@drawable/bg_new_reg_name"
                android:gravity="center"
                android:hint="常用邮箱"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:background="@drawable/bg_new_reg_name"
                android:gravity="center"
                android:hint="登陆密码：6-12位字母或数字"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pwd"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:background="@drawable/bg_new_reg_name"
                android:gravity="center"
                android:hint="请再次输入"
                android:text=""
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_liaojietujing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pwd_again"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="50dip"
                android:layout_marginRight="50dip"
                android:background="@drawable/bg_new_reg_name"
                android:drawableRight="@drawable/decrement_down"
                android:gravity="center"
                android:paddingBottom="4dip"
                android:paddingLeft="20dip"
                android:paddingRight="4dip"
                android:paddingTop="4dip"
                android:text="了解途径"
                android:textColor="@color/custom_grey"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip" >

                <Button
                    android:id="@+id/btn_shangyibu"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_newer_registration_btn"
                    android:paddingBottom="8dip"
                    android:paddingTop="8dip"
                    android:text="上一步"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_querenzhuce"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@drawable/bg_newer_registration_btn_disabled"
                    android:paddingBottom="8dip"
                    android:paddingTop="8dip"
                    android:text="确认注册"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>